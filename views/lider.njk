{% extends "layout.njk" %}

{% block content %}

    {% block head %}

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <title>Bora jogar? - CS:GO
        </title>
        <link rel="icon" type="image/png" sizes="32x32" href="https://cdn.discordapp.com/attachments/690023297727201317/720356110313324585/logo3.png">
    {% endblock %}

<body id='igorLOL-background'>
    

    <div id='igorLOL-gamea'>
            <img src="https://www.xaimer.com.br/arquivos/PRODUTOS/5501581998181487686/56_G_Riot-Points-League-Of-Legends.jpg" alt="lol">
        <h2>League of Legends - Leaderboard</h2>
    </div>

    <div class="profile">
        {% for item in items %}
            <section id="igorLOL-pat" class="profile_online">
                <div class="first">
                    <div class="profile_image">
                        <img src={{item.image}} alt="eu">
                    </div>

                    <div class="profile_name">
                        <h1>
                            {{item.name}}
                        </h1>
                    </div>
                </div>
                <div class="profile_game_name">
                    <p>
                        {{item.gameName}}
                    </p>
                </div>

                <div class="grid2">
                    <div class="feedback">
                        <img id='igorLOL-lider' src={{item.star}} alt="platina">
                        <p>
                            {{item.feedback}}
                        </p>
                    </div>

                </div>

            </section>
        {% endfor %}
        {% endblock %}
    </div>
    {% block igorheader %}
         <header id='igorLOL-header'>
            <div class="top">
                <div class="header-image">
                    <a class="a-igor" href="/inicio"><img src="https://cdn.discordapp.com/attachments/689605205313978476/722165785946095696/logo3.png" alt="logo"></a>
                </div>
                <div class="menu a-bah">
                    <a href="/sobre">Sobre</a>
                    <a href="/ajuda">Ajuda</a>
                    <a href="/">Leaderboard</a>
                    <a href="/inicio">Convites</a>
                    <a href="/amigos">Amigos</a>
                </div>
                <div class="choose-game">
                    <span id="igor" class="material-icons">account_box</span>
                </div>
                <div id="icon"></div>
            </div>
        </header>
    {% endblock igorheader %}
</body>